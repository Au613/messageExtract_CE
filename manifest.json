{
    "manifest_version": 3,
    "name": "Scrape Messages Extension",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "scripting": {
      "all_frames": true
    }
  }
  